# Doc Sync API Environment Configuration
# Copy this file to .env and adjust values as needed

# API Configuration
API_HOST=127.0.0.1
API_PORT=5000

# CKDEV-NOTE: API Base URL for generating download URLs in production
# Example: https://doc-sync-service.onrender.com
API_BASE_URL=https://your-backend-deployment-url.com

# File Paths
# CKDEV-NOTE: All output files are now saved to backend/shared/output
UPLOAD_FOLDER=uploads
OUTPUT_DIR=shared/output
TEMPLATES_DIR=shared/templates

# Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_HOUR=2
CLEANUP_MINUTE=0
CLEANUP_MAX_AGE_HOURS=24
CLEANUP_SHARED_OUTPUT_ENABLED=true
CLEANUP_SHARED_OUTPUT_PATH=shared/output

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT_CONSOLE=%(asctime)s - %(levelname)s - %(message)s

# CORS
# CKDEV-NOTE: Update for production. Example: https://doc-sync-original.netlify.app
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
